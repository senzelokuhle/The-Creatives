    <script>
        function Verified() {
            $.ajax({
                type: "post",
                url: "/Register/RegisterConfirm",
                data: { 'regId': '@ViewBag.regID' },
                success: function (msg) {
                    $("#previous").hide();
                    $("#after").show();
                    alert(msg);
                }
            })
        }
    </script>